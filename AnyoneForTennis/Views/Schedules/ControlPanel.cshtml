@model AnyoneForTennis.Models.ScheduleViewModel

@{
    ViewData["Title"] = "Control Panel";
}

<h1>Control Panel</h1>

<h2>Local Schedule</h2>
<p>
    Create for Local: <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocalSchedule.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocalSchedule.First().Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocalSchedule.First().Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LocalSchedule)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ScheduleId" asp-route-isLocal="true">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ScheduleId" asp-route-isLocal="true">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ScheduleId" asp-route-isLocal="true">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Main Schedule</h2>
<p>
    Create for Local: <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MainSchedule.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainSchedule.First().Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainSchedule.First().Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.MainSchedule) 
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ScheduleId" asp-route-isLocal="false">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ScheduleId" asp-route-isLocal="false">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ScheduleId" asp-route-isLocal="false">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

