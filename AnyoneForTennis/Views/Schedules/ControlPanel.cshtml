@model AnyoneForTennis.Models.ScheduleViewModel

@{
    ViewData["Title"] = "Control Panel";
}

<div class="container-fluid mt-5">
    <div class="control-panel-card shadow p-5 rounded">
        <h1 class="text-center mb-4 text-primary">Control Panel</h1>

        <div class="row">
            <!-- Local Schedule Section -->
            <div class="col-md-6">
                <div class="section-header">
                    <h2 class="text-success">Local Schedule</h2>
                    <p>
                        Create for Local: <a asp-action="Create" class="btn btn-primary">Create New</a>
                    </p>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.LocalSchedule.First().Name)</th>
                                <th>@Html.DisplayNameFor(model => model.LocalSchedule.First().Location)</th>
                                <th>@Html.DisplayNameFor(model => model.LocalSchedule.First().Description)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LocalSchedule)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Location)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.ScheduleId" class="btn btn-sm btn-info">Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.ScheduleId" asp-route-isLocal="true" class="btn btn-sm btn-secondary">Details</a>
                                        <a asp-action="Delete" asp-route-id="@item.ScheduleId" asp-route-isLocal="true" class="btn btn-sm btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Main Schedule Section -->
            <div class="col-md-6">
                <div class="section-header">
                    <h2 class="text-success">Main Schedule</h2>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.MainSchedule.First().Name)</th>
                                <th>@Html.DisplayNameFor(model => model.MainSchedule.First().Location)</th>
                                <th>@Html.DisplayNameFor(model => model.MainSchedule.First().Description)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.MainSchedule)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Location)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.ScheduleId" asp-route-isLocal="false" class="btn btn-sm btn-secondary">Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Memberships Section -->
        <div class="row mt-5">
            <div class="col-md-6">
                <div class="section-header">
                    <h3 class="text-success">Members</h3>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Member.First().FirstName)</th>
                                <th>@Html.DisplayNameFor(model => model.Member.First().LastName)</th>
                                <th>@Html.DisplayNameFor(model => model.Member.First().Email)</th>
                                <th>@Html.DisplayNameFor(model => model.Member.First().Active)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Member)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Active)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-md-6">
                <div class="section-header">
                    <h3 class="text-success">Coaches</h3>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Coach.First().FirstName)</th>
                                <th>@Html.DisplayNameFor(model => model.Coach.First().LastName)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Coach)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles for the Control Panel -->
<style>
    .control-panel-card {
        background-color: #f8f9fa;
        border-radius: 20px;
        border: 2px solid #28a745;
        padding: 40px;
    }

    .section-header {
        border-bottom: 2px solid #28a745;
        margin-bottom: 20px;
        padding-bottom: 10px;
    }

    h1, h2, h3 {
        color: #007bff;
    }

    table thead th {
        background-color: #343a40;
        color: #ffffff;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #e9ecef;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f3f5;
    }

    .btn {
        border-radius: 15px;
    }

    .btn-info {
        background-color: #17a2b8;
        color: #ffffff;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #ffffff;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #ffffff;
    }

    .table-responsive {
        max-height: 400px;
        overflow-y: auto;
    }

    .container-fluid {
        max-width: 1200px;
    }

    .control-panel-card h1:before {
        content: "🎾 ";
        font-size: 1.2em;
        color: #007bff;
    }
</style>
