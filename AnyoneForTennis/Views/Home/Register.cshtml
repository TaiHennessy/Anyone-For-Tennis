@model AnyoneForTennis.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded p-4 tennis-card">
        <h2 class="text-center text-primary">Register</h2>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Username" class="font-weight-bold">Username</label>
                <input asp-for="Username" class="form-control tennis-input" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="font-weight-bold">Email</label>
                <input asp-for="Email" class="form-control tennis-input" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="font-weight-bold">Password</label>
                <input asp-for="Password" class="form-control tennis-input" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="font-weight-bold">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control tennis-input" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FirstName" class="font-weight-bold">First Name</label>
                <input asp-for="FirstName" class="form-control tennis-input" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName" class="font-weight-bold">Last Name</label>
                <input asp-for="LastName" class="form-control tennis-input" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-tennis">Register</button>
            </div>
        </form>
    </div>
</div>

<!-- Tennis-Themed CSS -->
<style>
    /* Tennis-themed colors */
    .tennis-card {
        background-color: #e8f5e9; /* Light green background */
        border-left: 5px solid #388e3c; /* Dark green border */
    }

    h2.text-primary {
        color: #ffeb3b; /* Tennis ball yellow */
        font-family: 'Arial', sans-serif;
        font-weight: bold;
    }

    .card {
        border-radius: 15px;
    }

    .form-group label {
        color: #388e3c; /* Dark green for labels */
        font-family: 'Courier New', monospace;
    }

    .tennis-input {
        border: 2px solid #388e3c; /* Dark green border */
        border-radius: 8px;
        padding: 10px;
    }

    .btn-tennis {
        background-color: #ffeb3b; /* Tennis ball yellow */
        color: #388e3c; /* Dark green text */
        border: none;
        padding: 10px 20px;
        border-radius: 30px;
        transition: all 0.3s ease;
    }

    .btn-tennis:hover {
        background-color: #388e3c; /* Dark green on hover */
        color: #ffeb3b; /* Yellow text on hover */
    }

    /* Additional styles for aesthetics */
    .container {
        max-width: 500px;
    }

    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .text-center {
        text-align: center;
    }
</style>
